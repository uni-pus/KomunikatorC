        <TextBox x:Name="tBoxMessage" HorizontalAlignment="Left" Height="23" Margin="144,287,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="347"/>
        <Button x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Left" Margin="154,46,0,0" VerticalAlignment="Top" Width="75" Click="buttonConnect_Click"/>
        <Button x:Name="buttonSend" Content="Send" HorizontalAlignment="Left" Height="23" Margin="85,287,0,0" VerticalAlignment="Top" Width="54" Click="buttonSend_Click"/>
        <TextBox x:Name="tBoxOdbiorca" HorizontalAlignment="Left" Height="23" Margin="10,288,0,0" TextWrapping="Wrap" Text="odbiorca" VerticalAlignment="Top" Width="70"/>

    </Grid>
</Window>
